{
	"compilerOptions": {
		"target": "es2019",
		"module": "CommonJS",
		"strict": true,
		"declaration": true,
		"types": ["@types/jest", "node"],
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"outDir": "./lib",
		"lib": ["es2019"],
		"sourceMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["./src"]
}
